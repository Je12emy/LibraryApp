@model LibraryApp.Models.Socio

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/Registrar.css" rel="stylesheet" />
    <title>Registrarme</title>
</head>
<body>
    <div class="container-fluid">
        <div class="box">

            <h1 class="text-center"> Registro </h1>
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm())
                    {
                        <label for="nombreInput"> Nombre </label>
                        @Html.TextBoxFor(x => x.nombreSocio, new { @class = "form-control", @type = "text", @id = "nombreInput", @placeholder = "Ingrese su Nombre" })
                        
                        <label for="primerApellidoInput"> Primer Apellido </label>
                        @Html.TextBoxFor(x => x.primerApellido, new { @class = "form-control", @type = "text", @id = "primerApellidoInput", @placeholder = "Ingrese su Primer Apellido" })
                       
                        <label for="segundoApellidoInput"> Segundo Apellido </label>
                        @Html.TextBoxFor(x => x.segundoApellido, new { @class = "form-control", @type = "text", @id = "segundoApellidoInput", @placeholder = "Ingrese su Segundo Apellido" })
                      
                        <label for="direccionSocio"> Direccion </label>
                        @Html.TextBoxFor(x => x.direccionSocio, new { @class = "form-control", @type = "text", @id = "direccionSocio", @placeholder = "Ingrese su Direccion" })
                     
                        <label for="claveSocio"> Clave </label>
                            @Html.TextBoxFor(x => x.clave, new { @class = "form-control", @type = "password", @id = "claveSocio", @placeholder = "Ingrese una contraseña de 12 caracteres" })
                            <br>
                        <input type="submit" class="btn-primary" value="Registrarme">
                    }
                </div>

            </div>
            <div class="text-center">
                Despues de registrarte, consulta con el bibliotecario sobre tu Codigo de Socio                
                <br>
               @Html.ActionLink("Volver", "IniciarSesion", "", new { style = "text-allign:center;" })
            </div>

        </div>
    </div>
</body>
</html>
