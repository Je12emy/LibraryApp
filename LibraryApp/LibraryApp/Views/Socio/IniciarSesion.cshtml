@model LibraryApp.Models.Socio
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/CSS/Login.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/bootstrap-grid.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
</head>
<body style="background-color:#2c3e50">
    <!--Aca los socios inician sesion o pueden optar por registrase-->
    <div class="content">
        <div class="box">
            <h1> Iniciar Sesion </h1>
            @using (Html.BeginForm())
            {
                <form>
                    <div class="form-group">
                        <label for="codigoInput">Codigo de Socio</label>
                        @*<input type="number" class="form-control" id="exampleInputEmail1" placeholder="Ingrese su Codigo de Socio">*@
                        @Html.TextBoxFor(x => x.codigoSocio, new { @class = "form-control", @type = "number", @id = "codigoInput", @placeholder = "Ingrese su Codigo de Socio" })
                        <br>
                        @Html.TextBoxFor(x => x.clave, new { @class = "form-control", @type = "password", @id = "codigoInput", @placeholder = "Ingrese su contraseña" })
                    </div>
                    <input type="submit" class="btn btn-dark" placeholder="Ingresar" value="Ingresar">
                </form>
                <div class="text-center">
                    @Html.ActionLink("Registrarme", "Registrarme") <br>
                    @Html.ActionLink("Volver","Index","Home")
                </div>
            }
        </div>
    </div>
</body>
</html>
