@model LibraryApp.Models.Catalogo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Content/JS/buscar.js"></script>
    <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/Buscar.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Catalogo</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-3">Catalogo de Libros</h1>
            </div>
        </div>

        <div class="row mb-4 mt-4 text-center">
            <div class="col-12">
                <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Buscar por nombre" title="Type in a name">
            </div>
        </div>
        @if (@ViewData["CatalogoLibros"] != null)
        {
            List<LibraryApp.Models.Catalogo> listaLibros = ViewData["CatalogoLibros"] as List<LibraryApp.Models.Catalogo>;
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-hover" id="myTable">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col"> Codigo Libro </th>
                                    <th scope="col"> Titulo </th>
                                    <th scope="col"> Autor </th>
                                    <th scope="col"> Disponibilidad </th>
                                    <th scope="col"> Codigo de Ubicacion </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (LibraryApp.Models.Catalogo libro in listaLibros)
                                {
                                    <tr>
                                        <th scope="col"> @libro.codigoLibro </th>
                                        <td> @libro.tituloLibro </td>
                                        <td> @libro.autor </td>
                                        @if (libro.disponibilidad)
                                        {
                                            <td> Disponible </td>

                                        }
                                        else
                                        {
                                            <td> No Disponible </td>
                                        }
                                        <td> @libro.codigoUbicacion </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-12">
                    <h1 class="display-3 text-center"> Parece que no hay libros registrados </h1>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-12">
                <div class="list-group">
                    @Html.ActionLink("Agregar un Libro", "Agregar", "", new { @class = "list-group-item list-group-item-action " })

                    @Html.ActionLink("Modificar un Libro", "Modificar", "", new { @class = "list-group-item list-group-item-action " })
                    @Html.ActionLink("Eliminar un Libro", "Eliminar", "", new { @class = "list-group-item list-group-item-action " })
                </div>
            </div>
        </div>
        <div class="text-center">
            @Html.ActionLink("Volver", "Administracion")
        </div>
    </div>
</body>
</html>